<%= form_tag( login_path, method: 'post') do %>
  <div class="field">    
    <%= label_tag 'Username or password' %><br>
    <%= text_field_tag 'session[username_or_email]', username_or_email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag 'session[password]' %>
  </div>
  <p><a href="<%= recovery_password_path %>">forget your password?</a></p>
  <div class="actions">
    <%= submit_tag "log in" %>
  </div>
<% end %>
