<p id="notice"><%= notice %></p>

<%
  if @user.avatar_path.nil?
    concat image_tag 'users/default_avatar.png'
  else
    concat image_tag @user.avatar_path
  end
%>
<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if session.has_key?(:user_id) && session[:is_administrator] %>
<p>
  <strong>Is administrator:</strong>
  <%
      concat check_box_tag :is_administrator, '1', @user.is_administrator
  %>
</p>
<% end %>

<%
  if session.has_key?(:user_id) && session[:user_id] == @user.id
    concat link_to('Edit', edit_user_path(@user)) + ' | '
  end
%>
<%= link_to 'Back', users_path %>
