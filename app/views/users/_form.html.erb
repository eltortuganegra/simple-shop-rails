<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :username %><br>
    <% if @user.new_record? %>
      <%= f.text_field :username %>
    <% else %>
      <%= f.text_field :username, readonly: 'readonly' %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <% if @user.new_record? %>
      <%= f.text_field :email %>
    <% else %>
      <%= f.text_field :email, readonly: 'readonly' %>
    <% end %>

  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <% if ! @user.new_record? %>
    <div class="field">
      <%= f.label :avatar_path %><br>
      <%
        if @user.avatar_path.nil?
          concat image_tag 'users/default_avatar.png'
        else
          concat image_tag @user.avatar_path
        end
       %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
