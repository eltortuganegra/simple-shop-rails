<h1>Disable your account</h1>
<%= form_tag({}, {name: 'disable_account_confirm'}) do %>
  <p>Confirmation code</p>
  <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% end %>
  <p><%= text_field_tag 'settings[confirmation_code]', nil, placeholder: "Enter your confirmation code" %></p>
  <p><%= submit_tag 'disable my account' %></p>
<% end %>