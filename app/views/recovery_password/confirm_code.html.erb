<h1>Confirm your code</h1>
<p id="notice"><%= (notice.nil?)? '' : notice.html_safe %></p>
<%= form_tag recovery_password_confirm_new_password_url, {method: :post, name: 'recovery_password_confirmation_code_form'} do %>
  <p>Enter your confirmation code:</p>
  <%= text_field_tag('recovery_password[confirmation_code]') %>
  <%= submit_tag("confirm") %>
<% end %>
