<h1>Recovery password</h1>
<p id="notice"><%= (notice.nil?)? '' : notice.html_safe %></p>
<%= form_tag recovery_password_confirm_code_path, {method: :post, name: 'recovery_password_form'} do %>
  <p>Enter your email or username:</p>
  <%= text_field_tag('recovery_password[username_or_email]') %>
  <%= submit_tag("recovery") %>
<% end %>
